<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <!-- Bootstrap 5.3 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>

<!-- Header -->
<header class="header sticky-top">
    <div class="container-fluid px-4">
        <div class="d-flex align-items-center justify-content-between py-3">
            <!-- Left: Menu + Logo -->
            <div class="d-flex align-items-center gap-3">
                <button class="btn btn-link d-lg-none p-2" type="button" data-bs-toggle="offcanvas"
                        data-bs-target="#sidebarOffcanvas">
                    <i class="bi bi-list fs-4 text-secondary"></i>
                </button>
                <a href="@Url.Action("Index", "Question")" class="navbar-brand d-flex align-items-center gap-2 mb-0">
                    <div class="logo">F</div>
                    <span class="d-none d-sm-inline fw-semibold">ForumHub</span>
                </a>
            </div>

            <!-- Center: Search -->
            <div class="flex-grow-1 mx-4 d-none d-md-block" style="max-width: 600px;">
                @using (Html.BeginForm("Index", "Question", FormMethod.Get, new { @class = "position-relative" }))
                {
                    <i class="bi bi-search position-absolute top-50 translate-middle-y ms-3 text-muted"></i>
                    <input name="search" type="search" class="form-control ps-5" placeholder="Tìm kiếm chủ đề, bài viết...">
                }

            </div>

            <!-- Right: Actions -->
            <div class="d-flex align-items-center gap-2">
                @if (User.Identity.IsAuthenticated)
                {
                    <a href="messages.html" class="btn btn-link position-relative p-2">
                        <i class="bi bi-chat-dots fs-5 text-secondary"></i>
                        <span class="notification-dot bg-primary"></span>
                    </a>
                    <button class="btn btn-link position-relative p-2">
                        <i class="bi bi-bell fs-5 text-secondary"></i>
                        <span class="notification-dot bg-danger"></span>
                    </button>

                    <!-- User Dropdown -->
                    <div class="dropdown">
                        <button class="btn btn-link p-0" data-bs-toggle="dropdown">
                            <img src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=100&h=100&fit=crop"
                                 alt="User" class="rounded-circle" width="32" height="32">
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li class="dropdown-header">
                                <div class="fw-semibold small">@User.Identity.Name</div>
                                <div class="text-muted small">@User.Identity.IsAuthenticated</div>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="profile.html"><i class="bi bi-person-circle me-2"></i>Trang
                                    cá nhân</a></li>
                            <li><a class="dropdown-item" href="edit-profile.html"><i class="bi bi-gear me-2"></i>Cài đặt</a>
                            </li>
                            <li><a class="dropdown-item" href="change-password.html"><i class="bi bi-key me-2"></i>Đổi
                                    mật khẩu</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item text-danger" href="@Url.Action("Logout", "User")"><i
                                        class="bi bi-box-arrow-right me-2"></i>Đăng xuất</a></li>
                        </ul>
                    </div>
                }
                else
                {
                    <a href="@Url.Action("Login", "User")" class="btn btn-outline-primary">Đăng nhập</a>
                    <a href="@Url.Action("Register", "User")" class="btn btn-primary">Đăng ký</a>
                }
            </div>

        </div>

        <!-- Mobile Search -->
        <div class="d-md-none pb-3">
            <div class="position-relative">
                <i class="bi bi-search position-absolute top-50 translate-middle-y ms-3 text-muted"></i>
                <input type="search" class="form-control ps-5" placeholder="Tìm kiếm...">
            </div>
        </div>
    </div>
</header>

@RenderBody()

<!-- Footer -->
<footer class="footer">
    <div class="container py-4">
        <div class="row">
            <div class="col-md-4 mb-3 mb-md-0">
                <h6 class="fw-semibold mb-3">ForumHub</h6>
                <p class="text-light small">Diễn đàn thảo luận về công nghệ, lập trình và khởi nghiệp.</p>
            </div>
            <div class="col-md-2 mb-3 mb-md-0">
                <h6 class="fw-semibold mb-3">Về chúng tôi</h6>
                <ul class="list-unstyled small">
                    <li><a href="#" class="text-light">Giới thiệu</a></li>
                    <li><a href="#" class="text-light">Liên hệ</a></li>
                </ul>
            </div>
            <div class="col-md-2 mb-3 mb-md-0">
                <h6 class="fw-semibold mb-3">Hỗ trợ</h6>
                <ul class="list-unstyled small">
                    <li><a href="#" class="text-light">Trợ giúp</a></li>
                    <li><a href="#" class="text-light">FAQ</a></li>
                </ul>
            </div>
            <div class="col-md-4">
                <h6 class="fw-semibold mb-3">Theo dõi</h6>
                <div class="d-flex gap-2">
                    <a href="#" class="btn btn-outline-secondary btn-sm"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="btn btn-outline-secondary btn-sm"><i class="bi bi-twitter"></i></a>
                    <a href="#" class="btn btn-outline-secondary btn-sm"><i class="bi bi-github"></i></a>
                </div>
            </div>
        </div>
        <hr class="my-3">
        <div class="text-center text-light small">
            &copy; 2025 ForumHub. All rights reserved.
        </div>
    </div>
</footer>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)
</body>
</html>
