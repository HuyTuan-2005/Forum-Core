
    <div class="auth-container">
        <div class="w-100" style="max-width: 450px; padding: 1rem;">
            <!-- Back Button -->
            <a href="@Url.Action("Index", "Home")" class="btn btn-link text-decoration-none mb-4 p-0">
                <i class="bi bi-arrow-left me-2"></i>Quay lại
            </a>

            <!-- Auth Card -->
            <div class="auth-card shadow">
                <!-- Header -->
                <div class="text-center mb-4">
                    <div class="mx-auto mb-3" style="width: 64px; height: 64px; background: linear-gradient(135deg, #2196f3, #1976d2); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                        <span class="text-white fs-2 fw-semibold">F</span>
                    </div>
                    <h1 class="h4 mb-2">Chào mừng trở lại!</h1>
                    <p class="text-muted">Đăng nhập để tiếp tục với ForumHub</p>
                </div>

                <!-- Form -->
                <form action="@Url.Action("Login")" method="post">
                    @Html.AntiForgeryToken()
                    <!-- Email -->
                    <div class="mb-3">
                        <label for="email" class="form-label">Tên đăng nhập</label>
                        <div class="position-relative">
                            <i class="bi bi-envelope position-absolute top-50 translate-middle-y ms-3 text-muted"></i>
                            <input name="username" type="text" class="form-control ps-5" id="email" placeholder="Nhập tên đăng nhập" required>
                        </div>
                    </div>

                    <!-- Password -->
                    <div class="mb-3">
                        <label for="password" class="form-label">Mật khẩu</label>
                        <div class="position-relative">
                            <i class="bi bi-lock position-absolute top-50 translate-middle-y ms-3 text-muted"></i>
                            <input type="password" class="form-control ps-5 pe-5" id="password" placeholder="••••••••" required>
                            <button type="button" class="btn btn-link position-absolute top-50 translate-middle-y end-0 text-muted" onclick="togglePassword()">
                                <i class="bi bi-eye" id="toggleIcon"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Remember & Forgot -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="remember">
                            <label class="form-check-label" for="remember">
                                Ghi nhớ đăng nhập
                            </label>
                        </div>
                        <a href="#" class="text-primary text-decoration-none small">Quên mật khẩu?</a>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary w-100 mb-3" @*onclick="window.location.href='index.html'" *@>
                        Đăng nhập
                    </button>

                    <!-- Divider -->
                    <div class="text-center text-muted mb-3 hr-login">
                        <span class="bg-white px-2">hoặc</span>
                    </div>

                    <!-- Social Login -->
                    <div class="d-grid gap-2 mb-4">
                        <button type="button" class="btn btn-outline-secondary">
                            <i class="bi bi-google me-2"></i>Đăng nhập với Google
                        </button>
                        <button type="button" class="btn btn-outline-secondary">
                            <i class="bi bi-facebook me-2"></i>Đăng nhập với Facebook
                        </button>
                    </div>

                    <!-- Register Link -->
                    <div class="text-center">
                        <span class="text-muted">Chưa có tài khoản?</span>
                        <a href="@Url.Action("Register")" class="text-primary text-decoration-none ms-1">Đăng ký ngay</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const toggleIcon = document.getElementById('toggleIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('bi-eye');
                toggleIcon.classList.add('bi-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('bi-eye-slash');
                toggleIcon.classList.add('bi-eye');
            }
        }
    </script>
