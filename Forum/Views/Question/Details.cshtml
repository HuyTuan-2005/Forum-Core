
@{
    ViewBag.Title = "Index";
}
@model Forum.Models.Question

<!-- Main Content -->
<div class="container py-4">
    <!-- Back Button -->
    <a href="@Url.Action("Index")" class="btn btn-link text-decoration-none mb-3 p-0">
        <i class="bi bi-arrow-left me-2"></i>Quay lại
    </a>

    <!-- Post Detail -->
    <div class="post-container">
        <!-- Post Header -->
        <div class="post-header">
            <div class="d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center gap-3">
                    <a href="@Url.Action("Index", "Users", new { id = Model.User.UserName })">
                        <img src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=100&h=100&fit=crop"
                             alt="User" class="user-avatar rounded-circle" width="48" height="48">
                    </a>
                    <div>
                        <div class="fw-semibold">@Model.User.UserName</div>
                        <div class="text-muted small">@Forum.Helpers.DateTimeHelper.ConvertDateToString(Model.CreateAt)</div>
                    </div>
                </div>

                <div class="dropdown">
                    <button class="btn btn-link text-secondary" data-bs-toggle="dropdown">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#"><i class="bi bi-bookmark me-2"></i>Lưu bài viết</a></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-flag me-2"></i>Báo cáo</a></li>
                    </ul>
                </div>
            </div>

            <h1>@Model.Title</h1>

            <!-- Tags -->
            <div class="">
                @foreach (var i in Model.Tags)
                {
                    <span class="tag">@i.TagName</span>
                }
            </div>

            <!-- Author Info -->

        </div>

        <!-- Post Content -->
        <div class="post-content">
            @Model.Body
        </div>

        <!-- Post Actions -->
        <div class="post-actions">
            <div class="d-flex align-items-center gap-2 flex-wrap">
                <button class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-hand-thumbs-up me-1"></i>480
                </button>
                <button class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-hand-thumbs-down"></i>
                </button>
                <button class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-share me-1"></i>Chia sẻ
                </button>
                <button class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-bookmark me-1"></i>Lưu
                </button>
            </div>
        </div>
    </div>

    <!-- Comments Section -->
    <div class="comment-section">
        <div class="comment-header">
            <div class="d-flex align-items-center gap-2 mb-3">
                <h2 class="h6 mb-0 ">Viết câu trả lời của bạn</h2>
            </div>
            <!-- Reply Form -->
            <div class="d-flex gap-3">
                
                <div class="flex-grow-1">
                    <textarea class="form-control mb-2" rows="3" placeholder="Viết câu trả lời của bạn..."></textarea>
                    <div class="d-flex justify-content-end gap-2">
                        <button class="btn btn-outline-secondary btn-sm">Hủy</button>
                        <button class="btn btn-primary btn-sm">Gửi câu trả lời</button>
                    </div>
                </div>
            </div>
        </div>

